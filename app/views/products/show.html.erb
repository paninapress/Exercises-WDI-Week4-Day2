<!-- SHOW PRODUCT PAGE
displays: one product with it's categories -->

<h1><%= @product.name %></h1>

<h4>Description: </h4>
<p><%= @product.description %></p>

<h4>Price: </h4>
<p><%= @product.price %></p>

<h4>Categories:</h4>
<ul>
<% @categories.each do |category| %>
	<li><%= link_to category.name, category_path(category.id) %> </li>
<% end %>
</ul>

<h4>Edit: <%= link_to @product.name, edit_product_path %></h4>