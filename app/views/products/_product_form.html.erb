<!-- PARTIAL PRODUCT CREATE FORM -->

<%= form_for(@product) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :price %>
	<%= f.text_field :price %>
	<%= f.label :description %>
	<%= f.text_field :description %>
	<%= collection_check_boxes :product, :category_ids, Category.all, :id, :name %>
	
	<%= f.submit %>
<% end %>